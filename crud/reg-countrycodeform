save.php


<?php
require_once 'config.php';

// helper to send message and exit
function resp($msg, $ok = true){
    $color = $ok ? 'green' : 'red';
    echo "<div style='max-width:520px;margin:40px auto;padding:18px;border-radius:10px;background:#fff;border:1px solid #eee;font-family:Arial;'>
            <p style='color:$color;font-weight:700;margin:0 0 10px;'>".htmlspecialchars($msg)."</p>
            <p><a href='index.php' style='color:#2563eb'>Go back</a></p>
          </div>";
    exit;
}

if($_SERVER['REQUEST_METHOD'] !== 'POST'){
    resp('Invalid request method', false);
}

$name = isset($_POST['name']) ? trim($_POST['name']) : '';
$country_code = isset($_POST['country_code']) ? trim($_POST['country_code']) : '';
$phone = isset($_POST['phone']) ? trim($_POST['phone']) : '';  // digits only from client

// basic validation
if($name === '' || $country_code === '' || $phone === ''){
    resp('Please provide name, country code and phone.', false);
}

// clean country code (ensure leading +)
if($country_code[0] !== '+') $country_code = '+' . preg_replace('/[^\d]/', '', $country_code);
else $country_code = '+' . preg_replace('/[^\d]/', '', substr($country_code,1));

// keep only digits in phone
$phone_clean = preg_replace('/\D+/', '', $phone);

// build full phone (E.164-like)
$phone_full = $country_code . $phone_clean;

// optional: length checks (basic)
if(strlen($phone_clean) < 4 || strlen($phone_clean) > 15){
    resp('Phone number length seems invalid.', false);
}

// check duplicate
try {
    $stmt = $pdo->prepare("SELECT id FROM users WHERE phone_full = ? LIMIT 1");
    $stmt->execute([$phone_full]);
    $exists = $stmt->fetch();
    if($exists){
        resp('This phone is already registered.', false);
    }

    // insert
    $ins = $pdo->prepare("INSERT INTO users (name, country_code, phone, phone_full) VALUES (?, ?, ?, ?)");
    $ins->execute([$name, $country_code, $phone_clean, $phone_full]);

    resp('Saved successfully! Name: '.htmlspecialchars($name).' | Phone: '.htmlspecialchars($phone_full));

} catch (PDOException $e) {
    resp('Database error: '.$e->getMessage(), false);
}

